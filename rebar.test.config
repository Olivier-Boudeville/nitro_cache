% -*- Erlang -*-
%% vim: ts=4 sw=4 et ft=erlang

{lib_dirs,["deps"]}.
{src_dirs, ["src","test"]}.
{erl_opts, [
    debug_info,
    {parse_transform, stacktrace_transform}
]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.

{deps, [
	{stacktrace_compat, {git, "git://github.com/g-andrade/stacktrace_compat", {tag, "1.0.1"}}}
]}.
